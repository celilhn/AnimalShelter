    @if (TempData["AlertType"] != null)
    {
        @if (TempData["AlertType"].ToString() == ActionTypes.Create.ToString())
        {
            <script>
                swal({
                    title: "Registration successful!",
                    text: "",
                    icon: "success"
                });
            </script>
        }
        else if (TempData["AlertType"].ToString() == ActionTypes.Update.ToString())
        {
            <script>
                swal({
                    title: @TempData["AlertType"].ToString() +"Update process successful!",
                    text: "",
                    icon: "success"
                });
            </script>
        }
        else if (TempData["AlertType"].ToString() == ActionTypes.Delete.ToString())
        {
            <script>
                swal({
                    title: "Delete process successful!",
                    text: "",
                    icon: "success"
                });
            </script>
        }
        else if (TempData["AlertType"].ToString() == ActionTypes.Error.ToString())
        {
            <script>
                swal({
                    title: "Incorrect operation!",
                    text: "",
                    icon: "error"
                });
            </script>
        }
    }

@model Domain.Models.User
@using static Domain.Constants.Constants;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="wrapper">
                    <div class="row no-gutters">
                        <div class="contact-wrap w-100 p-md-5 p-4">
                            <h3 class="mb-4">Hayvan Sahiplendirme Başvurusu</h3>
                            @if (ViewBag.Warning != null)
                            {
                                <div class="alert alert-warning">@ViewBag.Warning</div>
                            }
                            <form method="POST" asp-controller="Home" asp-action="Register" enctype="multipart/form-data" class="contactForm">
                                <div class="form-group">
                                    <label for="Email">E-posta Adresi</label>
                                    <input type="email" class="form-control" asp-for="Email" name="Email" placeholder="E-posta Adresi" required>
                                </div>
                                <div class="form-group">
                                    <label for="UserName">Kullanıcı Adı</label>
                                    <input type="text" class="form-control" asp-for="UserName" name="UserName" placeholder="Kullanıcı Adı" required>
                                </div>
                                <div class="form-group">
                                    <label for="Password">Şifre</label>
                                    <input type="password" class="form-control" asp-for="Password" name="Password" placeholder="Şifre" required>
                                </div>
                                <div class="form-group">
                                    <label for="Name">Ad</label>
                                    <input type="text" class="form-control" asp-for="Name" name="Name" placeholder="Ad" required>
                                </div>
                                <div class="form-group">
                                    <label for="SurName">Soyad</label>
                                    <input type="text" class="form-control" asp-for="SurName" name="SurName" placeholder="Soyad" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

